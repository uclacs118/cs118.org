---
import Layout from "./Layout.astro";
import * as H from "../components/helpers/index.astro";
import { DateTime } from "luxon";

const { title, dueDate } = Astro.props.frontmatter;
const due = DateTime.fromISO(dueDate, { zone: "-00:00" });
---

<Layout title={title}>
    <H.Title>{title}</H.Title>
    <H.Subtitle>Due on {due.toFormat("EEEE, MMMM d 'at' h:mm a")}</H.Subtitle>
    <slot />
</Layout>
