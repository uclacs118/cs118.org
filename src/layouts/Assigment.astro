---
import Layout from "./Layout.astro";
import * as H from "../components/helpers/index.astro";
import moment from "moment";
const { title, dueDate } = Astro.props.frontmatter;
---

<Layout title={title}>
    <H.Title>{title}</H.Title>
    { dueDate ? <H.Subtitle>Due on {moment.utc(dueDate).format(H.format)}</H.Subtitle> : null }
    <slot />
</Layout>
